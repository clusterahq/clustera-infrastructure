# S3-Compatible Backend (Cloudflare R2)
# Get these from Cloudflare R2 dashboard: https://dash.cloudflare.com/?to=/:account/r2/overview/api-tokens
export AWS_ACCESS_KEY_ID=your_r2_access_key_id
export AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
export AWS_REGION=auto
# R2 endpoint - replace <account-id> with your Cloudflare account ID
export AWS_ENDPOINT_URL_S3=https://<account-id>.r2.cloudflarestorage.com
# Older Pulumi versions may need this instead
export AWS_S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com

# Pulumi Secrets Encryption
# Required: Passphrase for encrypting secrets in stack configs (e.g., pulumi config set --secret)
export PULUMI_CONFIG_PASSPHRASE=your-secure-passphrase

# Optional: Only needed if using Pulumi Cloud instead of R2 backend
# export PULUMI_ACCESS_TOKEN=pul-xxxxxxxxxxxxxxxxxxxx

# Aiven Configuration
export AIVEN_TOKEN=your_aiven_api_token

# GCP Configuration
# Option A (Local Dev): Use user account credentials via 'gcloud auth application-default login'
# Comment out GOOGLE_CREDENTIALS below and authenticate with gcloud CLI
# Option B (CI/CD): Use service account key file (store in keys/gcp/ directory)
export GOOGLE_CREDENTIALS=keys/gcp/your-service-account-key.json

# Optional: Override GCP project for commands
# export GOOGLE_PROJECT=your-gcp-project-id
